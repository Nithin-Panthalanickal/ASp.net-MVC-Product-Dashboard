<!DOCTYPE html>
 
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body style="background-color:burlywood; width: 1550px;">
    
    <!-- Header -->
    <header>
        <h1 style="text-align:center; color:bisque">Product Dashboard</h1>
    </header>
    <!-- End of Header -->
 
    <!-- Left Sidebar -->
    <nav>
      @*  <h3>Navigation</h3>
        @Html.ActionLink("Product", "Product");<br />*@
       
    </nav>
    <!-- End of Left Sidebar -->
    
    <!-- Content Body -->
    <div class="content">
            @RenderBody()
    </div>
    <!-- End of Content Body -->
 
    <!-- Footer -->
    <footer>
        <h4></h4>
    </footer>
 
    <!-- Style -->
    <style>
        header {
            height: 100px;
            width: 100%;
            background-color: red;
        }
 
        nav {
            float: left;
            width: 180px;
            height: 432px;
            background-color: burlywood;
            padding: 10px;
        }
 
        .content {
            background-color: aliceblue;
            padding: 20px;
            margin-left: 200px;
            padding-left: 37px;
        }
 
        footer {
            background-color: green;
            width: 100%;
            height: 50px;
            float: right;
            text-align: center;
        }
    </style>
    @RenderSection("scripts", required: false)
</body>
</html>